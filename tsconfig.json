{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",

        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2024",
        "lib": ["esnext"],
        "types": ["node", "@prisma/client"],
        "resolveJsonModule": true,

        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src"]
}
